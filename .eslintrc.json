{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "babel"
    ],
    "rules": {
        "require-jsdoc": "off",
        "linebreak-style": "off",
        "comma-dangle": ["error", "never"],
        "quotes": ["error", "double"],
        "object-curly-spacing": ["error", "always"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "max-len": "off",
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "no-invalid-this": 0,
        "babel/no-invalid-this": 1
    }
}